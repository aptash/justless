{
	"manifest_version": 2,
	"name": "JustLess Test Task",
	"version": "0.0.0.1",
	"icons": {
		"128": "icon.png"
	},
	"page_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"webRequest",
		"https://www.boots.com/*"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.marksandspencer.com/*"
			],
			"js": [
				"core.js",
				"stores/marksandspencer.com.js"
			]
		},
		{
			"matches": [
				"https://www.boots.com/*"
			],
			"js": [
				"core.js",
				"stores/boots.com.js"
			]
		}
	],
	"web_accessible_resources": [
		"xhrintercept.js"
	]
}